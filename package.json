{
  "name": "modular-monolith",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.4.5",
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "drizzle-orm": "0.44.7",
      "drizzle-kit": "^0.24.2",
      "pg": "^8.16.3",
      "hono": "^4.9.6",
      "@hono/node-server": "^1.14.0",
      "nanoid": "^5.0.9"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "clean": "turbo clean",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @modular-monolith/database db:push",
    "db:studio": "turbo -F @modular-monolith/database db:studio",
    "db:generate": "turbo -F @modular-monolith/database db:generate",
    "db:migrate": "turbo -F @modular-monolith/database db:migrate",
    "db:start": "turbo -F @modular-monolith/database db:start",
    "db:watch": "turbo -F @modular-monolith/database db:watch",
    "db:stop": "turbo -F @modular-monolith/database db:stop",
    "db:down": "turbo -F @modular-monolith/database db:down"
  },
  "dependencies": {
    "@polar-sh/sdk": "^0.41.5",
    "@types/node": "^25.0.2",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.2.23"
}
