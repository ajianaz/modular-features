{
  "name": "@modular-features/api",
  "version": "1.0.0",
  "description": "API layer with clean architecture for modular features",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "bun run src/server.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest --run env.test",
    "test:docker": "docker-compose -f docker-compose.test.yml up -d && sleep 5 && vitest --run env.test && docker-compose -f docker-compose.test.yml down",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "start": "bun run dist/server.js",
    "db:migrate": "bun run ../database/src/migrate.ts",
    "db:seed": "bun run ../database/src/seed.ts"
  },
  "keywords": [
    "api",
    "typescript",
    "hono",
    "clean-architecture",
    "modular-features",
    "rest",
    "web-server"
  ],
  "author": "Modular Features Team",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "catalog:",
    "@modular-features/database": "workspace:*",
    "@modular-features/shared": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.7",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "hono": "catalog:",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
    "@types/node": "^20",
    "typescript": "^5",
    "eslint": "^8",
    "prettier": "^3",
    "vitest": "^2",
    "@vitest/coverage-v8": "^2",
    "tsx": "^4.19.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
